@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Role Manager";
}
<div asp-validation-summary="ModelOnly"></div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Role Name</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form action="DeleteRole" method="post">
                        <a class="btn btn-danger" asp-route-id="@role.Id">Delete</a>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
<a class="btn btn-success" asp-action="AddRole"> Add a new Role</a>
