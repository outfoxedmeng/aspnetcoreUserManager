@model RoleCreateViewModel
@{
    ViewBag.Title = "Add Role";
}
<h2>@ViewBag.Title </h2>
<form asp-action="AddRole" method="post">

    <div>
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" />
        <span asp-validation-for="RoleName"></span>
    </div>
    <input type="submit" value="Save" />
</form>

